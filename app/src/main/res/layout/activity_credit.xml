<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CreditActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bg1"
        android:id="@+id/tbCredit">

        <Button
            android:id="@+id/btncalendarCredit"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="right"
            android:text="เลือกวันที่" />

    </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:background="#FAFAFA">

                </View>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="#DADADA">

                </View>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="12">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4">
                    <com.github.mikephil.charting.charts.BarChart
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/barchart">

                    </com.github.mikephil.charting.charts.BarChart>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="ยอดรวมทั้งหมด"
                        android:fontFamily="@font/supermarket"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginBottom="0dp"
                        android:padding="5dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp">

                        <TextView
                            android:id="@+id/tvcreditall"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="0.0"
                            android:fontFamily="@font/supermarket"
                            android:textColor="@color/text_money_pay"
                            android:textSize="24dp"
                            android:textStyle="bold" />

                    </android.support.v7.widget.CardView>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.v7.widget.GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            app:alignmentMode="alignMargins"
                            app:columnCount="2"
                            app:columnOrderPreserved="false"
                            app:rowCount="1">

                            <!--ธนาคารธนชาต-->
                            <android.support.v7.widget.CardView
                                style="@style/marginCardBank"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="5dp"
                                app:layout_columnWeight="1"
                                app:layout_rowWeight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:weightSum="10"
                                    >
                                    <android.support.v7.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        app:cardBackgroundColor="#f37023"
                                        android:layout_weight="3"
                                        >
                                        <ImageView
                                            android:layout_width="50dp"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/imb1"/>

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="40dp"
                                            android:gravity="center"
                                            android:text="ธนาคารธนชาต"
                                            android:textColor="@color/white" />

                                    </android.support.v7.widget.CardView>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="7">
                                        <android.support.v7.widget.GridLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            app:columnCount="2"
                                            app:rowCount="5"
                                            app:columnOrderPreserved="false"
                                            >

                                            <!--A-MAX-->
                                            <TextView
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginBottom="10dp"
                                                android:fontFamily="@font/supermarket"
                                                android:text="A-MAX"
                                                android:textColor="@color/black" />

                                            <TextView
                                                android:id="@+id/tvamaxt"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginBottom="5dp"
                                                android:fontFamily="@font/supermarket"
                                                android:text="0.0"
                                                android:textColor="#FF0000"
                                                app:layout_gravity="right" />

                                            <!--JCB-->
                                            <TextView

                                                android:layout_marginLeft="5dp"
                                                android:layout_marginBottom="10dp"
                                                android:fontFamily="@font/supermarket"
                                                android:text="JCB"
                                                android:textColor="@color/black" />

                                            <TextView
                                                android:id="@+id/tvjcbt"

                                                android:layout_marginLeft="10dp"
                                                android:layout_marginBottom="5dp"
                                                android:fontFamily="@font/supermarket"
                                                android:text="0.0"
                                                android:textColor="#FF0000"
                                                app:layout_gravity="right" />

                                            <!--MASTER-->
                                            <TextView
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginBottom="10dp"
                                                android:fontFamily="@font/supermarket"
                                                android:text="MASTER"
                                                android:textColor="@color/black" />

                                            <TextView
                                                android:id="@+id/tvmastert"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginBottom="5dp"
                                                android:fontFamily="@font/supermarket"
                                                android:text="0.0"

                                                android:textColor="#FF0000"
                                                app:layout_gravity="right" />

                                            <!--Unipay-->
                                            <TextView
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginBottom="10dp"
                                                android:fontFamily="@font/supermarket"
                                                android:text="UNIPAY"
                                                android:textColor="@color/black" />

                                            <TextView
                                                android:id="@+id/tvunipayt"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginBottom="5dp"
                                                android:fontFamily="@font/supermarket"
                                                android:text="0.0"
                                                android:textColor="#FF0000"
                                                app:layout_gravity="right" />

                                            <!--VISA-->
                                            <TextView
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginBottom="10dp"
                                                android:fontFamily="@font/supermarket"
                                                android:text="VISA"
                                                android:textColor="@color/black" />

                                            <TextView
                                                android:id="@+id/tvvisat"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginBottom="5dp"
                                                android:fontFamily="@font/supermarket"
                                                android:text="0.0"
                                                android:textColor="#FF0000"
                                                app:layout_gravity="right" />

                                        </android.support.v7.widget.GridLayout>
                                    </LinearLayout>
                                </LinearLayout>


                            </android.support.v7.widget.CardView>


                            <!--ธนาคารกรุงเทพ-->
                            <android.support.v7.widget.CardView
                                style="@style/marginCardBank"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="5dp"
                                app:layout_columnWeight="1"
                                app:layout_rowWeight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:weightSum="10">
                                    <android.support.v7.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        app:cardBackgroundColor="#001B7A"
                                        android:layout_weight="3"
                                        >
                                        <ImageView
                                            android:layout_width="50dp"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/imb2"/>

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="40dp"
                                            android:gravity="center"
                                            android:text="ธนาคารกรุงเทพ"
                                            android:textColor="@color/white" />

                                    </android.support.v7.widget.CardView>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="7">
                                        <android.support.v7.widget.GridLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            app:columnCount="2"
                                            app:rowCount="5"
                                            app:columnOrderPreserved="false">

                                            <!--A-MAX-->
                                            <TextView
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginBottom="10dp"
                                                android:fontFamily="@font/supermarket"
                                                android:text="A-MAX"

                                                android:textColor="@color/black" />

                                            <TextView
                                                android:id="@+id/tvamaxk"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginBottom="5dp"
                                                android:fontFamily="@font/supermarket"
                                                android:text="0.0"
                                                android:textColor="#FF0000"
                                                app:layout_gravity="right" />

                                            <!--JCB-->
                                            <TextView
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginBottom="10dp"
                                                android:fontFamily="@font/supermarket"
                                                android:text="JCB"
                                                android:textColor="@color/black" />

                                            <TextView
                                                android:id="@+id/tvjcbk"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginBottom="5dp"
                                                android:fontFamily="@font/supermarket"
                                                android:text="0.0"
                                                android:textColor="#FF0000"
                                                app:layout_gravity="right" />

                                            <!--MASTER-->
                                            <TextView
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginBottom="10dp"
                                                android:fontFamily="@font/supermarket"
                                                android:text="MASTER"
                                                android:textColor="@color/black" />

                                            <TextView
                                                android:id="@+id/tvmasterk"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginBottom="5dp"
                                                android:fontFamily="@font/supermarket"
                                                android:text="0.0"
                                                android:textColor="#FF0000"
                                                app:layout_gravity="right" />

                                            <!--Unipay-->
                                            <TextView

                                                android:layout_marginLeft="5dp"
                                                android:layout_marginBottom="10dp"
                                                android:fontFamily="@font/supermarket"
                                                android:text="UNIPAY"
                                                android:textColor="@color/black" />

                                            <TextView
                                                android:id="@+id/tvunipayk"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginBottom="5dp"
                                                android:fontFamily="@font/supermarket"
                                                android:text="0.0"
                                                android:textColor="#FF0000"
                                                app:layout_gravity="right" />

                                            <!--VISA-->
                                            <TextView
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginBottom="10dp"
                                                android:fontFamily="@font/supermarket"
                                                android:text="VISA"
                                                android:textColor="@color/black" />

                                            <TextView
                                                android:id="@+id/tvvisak"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginBottom="5dp"
                                                android:fontFamily="@font/supermarket"
                                                android:text="0.0"
                                                android:textColor="#FF0000"
                                                app:layout_gravity="right" />
                                        </android.support.v7.widget.GridLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                        </android.support.v7.widget.GridLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>







</LinearLayout>