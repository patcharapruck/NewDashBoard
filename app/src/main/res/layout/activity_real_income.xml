<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RealIncomeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tbIncome"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bg1">

        <Button
            android:id="@+id/btncalendarrevenue"
            android:layout_width="wrap_content"

            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="right"
            android:fontFamily="@font/prompt_regular"
            android:text="@string/selectDate" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:background="#FAFAFA">

                </View>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="#DADADA">

                </View>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:layout_width="@dimen/circle_real_income_width"
                        android:layout_height="@dimen/circle_real_income_height"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/circle_real_income_margin"
                        app:cardBackgroundColor="@color/circle_real_income"
                        app:cardCornerRadius="@dimen/circle_real_income_radius">

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="@dimen/circle_in_real_income_width"
                        android:layout_height="@dimen/circle_in_real_income_height"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/circle_in_real_income_margin"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/circle_in_real_income_radius">
                        />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/circle_text_margin_bot"
                            android:fontFamily="@font/prompt_regular"
                            android:gravity="center"
                            android:text="รายรับจริง"
                            android:textColor="@color/black"
                            android:textSize="@dimen/circle_text_size" />

                        <TextView
                            android:id="@+id/tvrevenue"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/circle_text_margin_bot_money"
                            android:fontFamily="@font/prompt_regular"
                            android:gravity="center"
                            android:text="0.0"
                            android:textColor="@color/real_money_text"
                            android:textSize="@dimen/circle_text_size_money" />

                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:layout_width="@dimen/real_card_width"
                        android:layout_height="@dimen/real_card_height"
                        android:layout_marginLeft="@dimen/real_bill_card_mar_left"
                        android:layout_marginTop="@dimen/real_bill_card_mar_top"
                        android:layout_weight="4"
                        app:cardBackgroundColor="@color/real_bill_card"
                        app:cardCornerRadius="@dimen/real_card_radius">

                        <android.support.v7.widget.CardView
                            android:layout_width="@dimen/real_incard_width"
                            android:layout_height="@dimen/real_incard_height"
                            android:layout_gravity="center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/real_incard_text_mar_bot"
                                android:fontFamily="@font/prompt_regular"
                                android:gravity="center"
                                android:text="รายรับตามบิล"
                                android:textColor="@color/black"
                                android:textSize="@dimen/real_incard_text_size" />

                            <TextView
                                android:id="@+id/tvincome"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/real_bill_incard_text_margin_top"
                                android:fontFamily="@font/prompt_regular"
                                android:gravity="center"
                                android:text="0.0"
                                android:textColor="@color/real_money_text"
                                android:textSize="@dimen/real_money_text_size"

                                />
                        </android.support.v7.widget.CardView>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="@dimen/real_card_width"
                        android:layout_height="@dimen/real_card_height"
                        android:layout_marginLeft="@dimen/real_credit_card_mar_left"
                        android:layout_marginTop="@dimen/real_credit_card_mar_top"
                        android:layout_weight="4"
                        app:cardBackgroundColor="@color/real_credit_card"
                        app:cardCornerRadius="@dimen/real_card_radius">>

                        <android.support.v7.widget.CardView
                            android:layout_width="@dimen/real_incard_width"
                            android:layout_height="@dimen/real_incard_height"
                            android:layout_gravity="center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/real_incard_text_mar_bot"
                                android:fontFamily="@font/prompt_regular"
                                android:gravity="center"
                                android:text="ยอดบัตรเครดิต"
                                android:textColor="@color/black"
                                android:textSize="@dimen/real_incard_text_size" />

                            <TextView
                                android:id="@+id/tvcreditCardPayments"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/real_bill_incard_text_margin_top"
                                android:fontFamily="@font/prompt_regular"
                                android:gravity="center"
                                android:text="0.0"
                                android:textColor="@color/real_money_text"
                                android:textSize="@dimen/real_money_text_size"

                                />
                        </android.support.v7.widget.CardView>
                    </android.support.v7.widget.CardView>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/real_income_linear"

                    >

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10">

                        <TableRow android:background="@color/table_real_income">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="5"

                                android:fontFamily="@font/prompt_regular"
                                android:gravity="center"
                                android:text="รายการ"
                                android:textColor="@color/black"
                                android:textSize="@dimen/table_real_incom_text_head" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:fontFamily="@font/prompt_regular"
                                android:gravity="center"
                                android:text="ยอดรวม"
                                android:textColor="@color/black"
                                android:textSize="@dimen/table_real_incom_text_head" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/table_real_incom_margin_left"
                                android:layout_weight="5"
                                android:fontFamily="@font/prompt_regular"
                                android:text="รายการตามใบบิล"
                                android:textColor="@color/black"
                                android:textSize="@dimen/table_real_incom_text_row" />

                            <TextView
                                android:id="@+id/tvbill"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/table_real_incom_margin_right"
                                android:layout_weight="5"

                                android:fontFamily="@font/prompt_regular"
                                android:gravity="right"
                                android:text="0.0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/table_real_incom_text_row" />
                        </TableRow>

                        <TableRow android:background="@color/table_real_income">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/table_real_incom_margin_left"
                                android:layout_weight="5"

                                android:fontFamily="@font/prompt_regular"
                                android:text="เงินสด"
                                android:textColor="@color/black"
                                android:textSize="@dimen/table_real_incom_text_row" />

                            <TextView
                                android:id="@+id/tvcashPayments"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/table_real_incom_margin_right"

                                android:layout_weight="5"

                                android:fontFamily="@font/prompt_regular"
                                android:gravity="right"
                                android:text="0.0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/table_real_incom_text_row" />


                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/table_real_incom_margin_left"
                                android:layout_weight="5"
                                android:fontFamily="@font/prompt_regular"
                                android:text="ค้างชำระ"
                                android:textColor="@color/black"
                                android:textSize="@dimen/table_real_incom_text_row" />

                            <TextView
                                android:id="@+id/tvunpaid"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/table_real_incom_margin_right"
                                android:layout_weight="5"

                                android:fontFamily="@font/prompt_regular"
                                android:gravity="right"
                                android:text="0.0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/table_real_incom_text_row" />


                        </TableRow>

                        <TableRow android:background="@color/table_real_income">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/table_real_incom_margin_left"
                                android:layout_weight="5"

                                android:fontFamily="@font/prompt_regular"
                                android:text="ชำระผ่านบัตรเครดิต"
                                android:textColor="@color/black"
                                android:textSize="@dimen/table_real_incom_text_row" />

                            <TextView
                                android:id="@+id/tvcredit"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/table_real_incom_margin_right"
                                android:layout_weight="5"

                                android:fontFamily="@font/prompt_regular"
                                android:gravity="right"
                                android:text="0.0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/table_real_incom_text_row" />


                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/table_real_incom_margin_left"
                                android:layout_weight="5"

                                android:fontFamily="@font/prompt_regular"
                                android:text="Credit"
                                android:textColor="@color/black"
                                android:textSize="@dimen/table_real_incom_text_row" />

                            <TextView
                                android:id="@+id/tvcreditPayments"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/table_real_incom_margin_right"
                                android:layout_weight="5"

                                android:fontFamily="@font/prompt_regular"
                                android:gravity="right"
                                android:text="0.0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/table_real_incom_text_row" />

                        </TableRow>

                        <TableRow android:background="@color/table_real_income">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/table_real_incom_margin_left"
                                android:layout_weight="5"

                                android:fontFamily="@font/prompt_regular"
                                android:text="Entertain"
                                android:textColor="@color/black"
                                android:textSize="@dimen/table_real_incom_text_row" />

                            <TextView
                                android:id="@+id/tventertainPayments"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/table_real_incom_margin_right"
                                android:layout_weight="5"

                                android:fontFamily="@font/prompt_regular"
                                android:gravity="right"
                                android:text="0.0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/table_real_incom_text_row" />


                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/table_real_incom_margin_left"
                                android:layout_weight="5"

                                android:fontFamily="@font/prompt_regular"
                                android:text="ตัดยอด Member"
                                android:textColor="@color/black"
                                android:textSize="@dimen/table_real_incom_text_row" />

                            <TextView
                                android:id="@+id/tvmemberDebitPayments"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/table_real_incom_margin_right"
                                android:layout_weight="5"

                                android:fontFamily="@font/prompt_regular"
                                android:gravity="right"
                                android:text="0.0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/table_real_incom_text_row" />


                        </TableRow>

                        <TableRow android:background="@color/table_real_income">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/table_real_incom_margin_left"
                                android:layout_weight="5"

                                android:fontFamily="@font/prompt_regular"
                                android:text="ค่าธรรมเนียม"
                                android:textColor="@color/black"
                                android:textSize="@dimen/table_real_incom_text_row" />

                            <TextView
                                android:id="@+id/tvtotalServiceCharge"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/table_real_incom_margin_right"
                                android:layout_weight="5"

                                android:fontFamily="@font/prompt_regular"
                                android:gravity="right"
                                android:text="0.0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/table_real_incom_text_row" />


                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/table_real_incom_margin_left"
                                android:layout_weight="5"
                                android:fontFamily="@font/prompt_regular"
                                android:text="สรุปรายได้จริง"
                                android:textColor="@color/black"
                                android:textSize="@dimen/table_real_incom_text_row" />

                            <TextView
                                android:id="@+id/tvtotal"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/table_real_incom_margin_right"
                                android:layout_weight="5"
                                android:fontFamily="@font/prompt_regular"
                                android:gravity="right"
                                android:text="0.0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/table_real_incom_text_row" />


                        </TableRow>

                    </TableLayout>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>


</LinearLayout>