<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RealIncomeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tbIncome"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bg_login"
        android:theme="@style/ToolbarTheme">

        <Button
            android:id="@+id/btncalendarrevenue"
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:background="@drawable/rounded_botton"
            android:fontFamily="@font/prompt_bold"
            android:text="@string/selectDate"
            android:textColor="@color/bg_login" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:layout_margin="5dp"

                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/card_mar_l"
                    android:layout_marginRight="@dimen/card_mar_r"
                    android:layout_marginTop="@dimen/card_mar_t"
                    android:layout_marginBottom="@dimen/card_mar_b"
                    android:elevation="@dimen/card_elevation"
                    app:cardCornerRadius="@dimen/card_radius">

                    <TextView
                        android:id="@+id/tvrevenue"
                        android:freezesText="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/card_text_mar_t"
                        android:layout_marginBottom="@dimen/card_text_mar_b"
                        android:layout_weight="1"
                        android:fontFamily="@font/prompt_bold"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="00,000,000,000.0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/card_text_size" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="@dimen/card_in_w"
                    android:layout_height="@dimen/card_in_h"
                    android:layout_marginLeft="@dimen/card_in_mar_l"
                    android:layout_marginTop="@dimen/card_in_mara_r"
                    app:cardBackgroundColor="@color/bg_real"
                    app:cardCornerRadius="@dimen/card_in_radius">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/prompt_bold"
                        android:gravity="center"
                        android:text="รายรับจริง"
                        android:textColor="@color/white"
                        android:textSize="@dimen/card_in_text_size" />
                </android.support.v7.widget.CardView>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/linear_group_card_h"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/linear_group_card_pad_l"
                android:paddingRight="@dimen/linear_group_card_pad_r"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/card_in_linear_group_mar_l"
                    android:layout_marginTop="@dimen/card_in_linear_group_mar_t"
                    android:layout_marginRight="@dimen/card_in_linear_group_mar_r"
                    android:layout_marginBottom="@dimen/card_in_linear_group_mar_b"
                    android:layout_weight="1"
                    android:elevation="@dimen/card_in_linear_group_elevation"
                    app:cardCornerRadius="@dimen/card_radius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/card2_in_linear_group_text_mar_l"
                            android:layout_marginTop="@dimen/card2_in_linear_group_text_mar_t"
                            android:layout_weight="1"
                            android:fontFamily="@font/prompt_bold"
                            android:text="รายรับตามบิล"
                            android:textColor="@color/black"
                            android:textSize="@dimen/card2_in_linear_group_text_size" />

                        <TextView
                            android:id="@+id/tvincome"
                            android:freezesText="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/card2_in_linear_group_text2_mar_l"
                            android:layout_marginRight="@dimen/card2_in_linear_group_text2_mar_r"
                            android:layout_weight="1"
                            android:fontFamily="@font/prompt_regular"
                            android:maxLines="1"
                            android:text="000,000,000.00"
                            android:textColor="@color/black"
                            android:textSize="@dimen/card2_in_linear_group_text2_size" />

                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/card_in_linear_group_mar_l"
                    android:layout_marginTop="@dimen/card_in_linear_group_mar_t"
                    android:layout_marginRight="@dimen/card_in_linear_group_mar_r"
                    android:layout_marginBottom="@dimen/card_in_linear_group_mar_b"
                    android:layout_weight="1"
                    android:elevation="@dimen/card_elevation"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/card_radius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/card2_in_linear_group_text_mar_l"
                            android:layout_marginTop="@dimen/card2_in_linear_group_text_mar_t"
                            android:layout_weight="1"
                            android:fontFamily="@font/prompt_bold"
                            android:text="ค้างชำระ"
                            android:textColor="@color/not_pay"
                            android:textSize="@dimen/card2_in_linear_group_text_size" />

                        <TextView
                            android:id="@+id/tvunpaid"
                            android:freezesText="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/card2_in_linear_group_text2_mar_l"
                            android:layout_marginRight="@dimen/card2_in_linear_group_text2_mar_r"
                            android:layout_weight="1"
                            android:fontFamily="@font/prompt_regular"
                            android:maxLines="1"
                            android:text="000,000,000.00"
                            android:textColor="@color/not_pay"
                            android:textSize="@dimen/card2_in_linear_group_text2_size" />

                    </LinearLayout>


                </android.support.v7.widget.CardView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/hade_card_txt_mar_l"
                android:layout_marginTop="@dimen/hade_card_txt_mar_t"
                android:layout_marginBottom="@dimen/hade_card_txt_mar_b"
                android:text="รูปแบบการชำระ"
                android:fontFamily="@font/prompt_medium"
                android:textColor="@color/hade_card_txt"
                android:textSize="@dimen/hade_card_txt_size" />
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_all_1_h"
                android:layout_marginLeft="@dimen/card_all_1_mar_l"
                android:layout_marginRight="@dimen/card_all_1_mar_r"
                android:layout_gravity="center"
                android:elevation="@dimen/card_all_1_elevation"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/card_all_1_radius">

                <RelativeLayout
                    android:layout_width="@dimen/circle_real_income_width"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="@dimen/bill_incom_width_tab_color"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp"
                        android:background="@color/tab_view1"></View>
                </RelativeLayout>


                <android.support.v7.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:layout_margin="1dp"
                    app:columnCount="3"
                    app:columnOrderPreserved="false"
                    app:rowCount="5">


                    <!--เงินสด-->
                    <ImageView
                        android:layout_width="@dimen/img_w_real"
                        android:layout_height="@dimen/img_w_real"
                        android:layout_marginLeft="@dimen/img_mar_real_l"
                        android:layout_marginBottom="@dimen/img_mar_real_b"
                        android:src="@drawable/ic003" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/prompt_regular"
                        android:text="เงินสด"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvcashPayments"
                        android:freezesText="true"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prompt_regular"
                        android:gravity="right"
                        app:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:maxLines="1"
                        android:text="00,000,000,000.00"
                        android:textColor="@color/text_real_incom" />

                    <!--ชำระผ่านบัตรเครดิต-->

                    <ImageView
                        android:layout_width="@dimen/img_w_real"
                        android:layout_height="@dimen/img_w_real"
                        android:layout_marginLeft="@dimen/img_mar_real_l"
                        android:layout_marginBottom="@dimen/img_mar_real_b"
                        android:src="@drawable/ic001" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/prompt_regular"
                        android:text="ชำระผ่านบัตรเครดิต"
                        android:textColor="@color/black" />

                    <TextView

                        android:id="@+id/tvcreditPayments"
                        android:freezesText="true"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prompt_regular"
                        android:gravity="right"
                        app:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:maxLines="1"
                        android:text="00,000,000,000.00"
                        android:textColor="@color/text_real_incom" />
                    <!--ตัดยอด Member-->
                    <ImageView
                        android:layout_width="@dimen/img_w_real"
                        android:layout_height="@dimen/img_w_real"
                        android:layout_marginLeft="@dimen/img_mar_real_l"
                        android:layout_marginBottom="@dimen/img_mar_real_b"
                        android:src="@drawable/ic007" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/prompt_regular"
                        android:text="ตัดยอด Member"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvmemberDebitPayments"
                        android:freezesText="true"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prompt_regular"
                        android:gravity="right"
                        android:maxLines="1"
                        app:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:text="00,000,000,000.00"
                        android:textColor="@color/text_real_incom" />

                    <!--Entertrain-->
                    <ImageView
                        android:layout_width="@dimen/img_w_real"
                        android:layout_height="@dimen/img_w_real"
                        android:layout_marginLeft="@dimen/img_mar_real_l"
                        android:layout_marginBottom="@dimen/img_mar_real_b"
                        android:src="@drawable/ic006" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/prompt_regular"
                        android:text="Entertrian"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tventertainPayments"
                        android:freezesText="true"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prompt_regular"
                        android:gravity="right"
                        android:maxLines="1"
                        app:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:text="00,000,000,000.00"
                        android:textColor="@color/text_real_incom" />

                    <!--เครดิต-->
                    <ImageView
                        android:layout_width="@dimen/img_w_real"
                        android:layout_height="@dimen/img_w_real"
                        android:layout_marginLeft="@dimen/img_mar_real_l"
                        android:layout_marginBottom="@dimen/img_mar_real_b"
                        android:src="@drawable/ic008" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/prompt_regular"
                        android:text="Credit"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvcredit"
                        android:freezesText="true"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prompt_regular"
                        android:gravity="right"
                        android:maxLines="1"
                        app:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:text="00,000,000,000.00"
                        android:textColor="@color/text_real_incom" />


                </android.support.v7.widget.GridLayout>


            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/hade_card_txt_mar_l"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="@dimen/hade_card_txt_mar_b"
                android:text="เครดิต"
                android:fontFamily="@font/prompt_medium"
                android:textColor="@color/hade_card_txt"
                android:textSize="@dimen/hade_card_txt_size"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_all_2_h"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/card_all_1_mar_b"
                android:layout_marginRight="@dimen/card_all_1_mar_r"
                android:layout_marginLeft="@dimen/card_all_1_mar_l"
                android:padding="@dimen/card_all_1_pad"
                android:elevation="@dimen/card_all_1_elevation"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/card_all_1_radius">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="@dimen/bill_incom_width_tab_color"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp"
                        android:background="@color/tab_view2"></View>
                </RelativeLayout>

                <android.support.v7.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    app:columnOrderPreserved="true"
                    app:columnCount="3"
                    app:rowCount="1">

                    <!--ค่าธรรมเนียม-->
                    <ImageView
                        android:layout_width="@dimen/img_w_real"
                        android:layout_height="@dimen/img_w_real"
                        android:layout_marginLeft="@dimen/img_mar_real_l"
                        android:layout_marginBottom="@dimen/img_mar_real_b"
                        android:src="@drawable/ic005"
                         />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/prompt_regular"
                        android:text="ค่าธรรมเนียม"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvtotalServiceCharge"
                        android:freezesText="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prompt_regular"
                        android:gravity="right"
                        android:maxLines="1"
                        app:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:text="00,000,000,000.00"
                        android:textColor="@color/not_pay" />

                </android.support.v7.widget.GridLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>


    </ScrollView>


</LinearLayout>