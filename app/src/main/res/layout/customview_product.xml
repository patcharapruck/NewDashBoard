<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/textproduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="รายการสินค้า"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/textproduct">

        <TextView
            android:id="@+id/tvnameProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_weight="1"/>

        <View
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:background="#a138be"
            android:layout_marginTop="5dp">
        </View>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textproduct"
        android:orientation="horizontal"
        android:weightSum="4"
        android:padding="5dp">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/texttotal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:text="Total :"
                    android:gravity="bottom"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/textc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ขวด"
                    android:textSize="10sp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"/>

                <TextView
                    android:id="@+id/tvtotalproduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="15sp"
                    android:layout_toLeftOf="@id/textc"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="3dp"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.7"
            android:weightSum="3">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="3dp">

                    <TextView
                        android:id="@+id/textB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="เบิกใช้สิทธิ์ :"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/tvwithdrawpercent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/textB"
                        android:text="0.0%"
                        android:gravity="center"
                        android:textColor="#2cb92f"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/textd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ขวด"
                        android:textSize="10sp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"/>

                    <TextView
                        android:id="@+id/tvwithdrawProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12sp"
                        android:layout_toLeftOf="@id/textd"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="3dp"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="3dp">

                    <TextView
                        android:id="@+id/textpay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="ซื้อ :"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/tvpurchasepercent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/textpay"
                        android:text="0.0%"
                        android:gravity="center"
                        android:textColor="#2cb92f"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/textf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ขวด"
                        android:textSize="10sp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"/>

                    <TextView
                        android:id="@+id/tvpurchaseProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12sp"
                        android:layout_toLeftOf="@id/textf"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="3dp"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="3dp">

                    <TextView
                        android:id="@+id/textEntertain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="Entertain:"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/tventertainpercent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/textEntertain"
                        android:text="0.0%"
                        android:gravity="center"
                        android:textColor="#2cb92f"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/textg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ขวด"
                        android:textSize="10sp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"/>

                    <TextView
                        android:id="@+id/tventertainProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12sp"
                        android:layout_toLeftOf="@id/textg"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="3dp"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>



        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a138be"
        android:layout_alignParentBottom="true">

    </View>

</RelativeLayout>